# Talker-Thinker Environment Configuration
# Copy this file to .env and fill in your values

# LLM Base URL (火山引擎/火山方舟)
LLM_BASE_URL=https://ark.cn-beijing.volces.com/api/coding/v3

# API Key (火山引擎)
VOLCES_API_KEY=your-volces-api-key

# 模型配置
TALKER_MODEL=DeepSeek-V3.2
THINKER_MODEL=Kimi-K2-thinking

# 可选: OpenAI/Anthropic API Keys (如果使用其他后端)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/talker_thinker

# Vector Database Configuration
VECTOR_DB_URL=http://localhost:6333

# Monitoring
LOG_LEVEL=INFO
ALERT_WEBHOOK_URL=

# Feature Flags
ENABLE_STREAMING=true
ENABLE_PROGRESS_NOTIFICATION=true
ENABLE_PROACTIVE_CONVERSATION=true
